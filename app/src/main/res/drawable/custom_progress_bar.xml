<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

  <!-- Define the background properties like color etc -->
  <item android:id="@android:id/background" android:height="8dp">
    <shape>

      <solid android:color="#DFDFDF">
      </solid>

      <corners
        android:radius="10dp">
      </corners>

    </shape>
  </item>

  <!-- Define the progress properties like start color, end color etc -->
  <item android:id="@android:id/progress" android:height="8dp">
    <clip>
      <shape>
        <solid
          android:color="#00000033"
          >
        </solid>
        <corners
          android:radius="10dp"   >
        </corners>
      </shape>
    </clip>
  </item>

</layer-list>
